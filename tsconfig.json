{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@paperless-dedupe/core": ["./packages/core/src/index.ts"],
      "@paperless-dedupe/core/*": ["./packages/core/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".svelte-kit"]
}
