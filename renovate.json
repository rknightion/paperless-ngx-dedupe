{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Never automerge release-please PRs - manual review required",
      "matchFileNames": [
        ".release-please-*.json"
      ],
      "automerge": false
    },
    {
      "description": "Automerge GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dep:gha"
      ],
      "automerge": true
    },
    {
      "description": "Automerge patch and minor updates for low risk",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "labels": [
        "dep:low-risk"
      ]
    },
    {
      "description": "Automerge pin updates",
      "matchUpdateTypes": [
        "pin"
      ],
      "automerge": true,
      "labels": [
        "dep:low-risk"
      ]
    },
    {
      "description": "Automerge digest updates (Docker, etc)",
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "labels": [
        "dep:low-risk"
      ]
    }
  ]
}
